<section>
    <h2 class="mt-8 text-center font-bold text-5xl">
        Getting Started
    </h2>
    <div>
        <div>
            <div class="flex flex-col mx-auto" style="width:380px">

                <h4 class="my-4 text-center text-xl">Download Talent Blazor</h4>

                <div class="flex justify-center text-center">
                    <a class="hover:no-underline" 
                        href=@ZipUrl("NetCoreApps/TalentBlazor")>
                        <div class="bg-white px-4 py-4 mr-4 mb-4 rounded-lg shadow-lg text-center items-center justify-center hover:shadow-2xl" 
                             style="min-width:150px">
                            <div class="text-center font-extrabold flex items-center justify-center mb-2">
                                <div class="text-4xl py-5">
                                    <img class="w-12 h-12" src="/img/blazor.svg" alt="Blazor Logo" />
                                </div>
                            </div>
                            <div class="text-lg font-medium text-gray-700">Blazor WASM</div>
                            <div class="text-base px-4 py-2 text-blue-600">@ProjectZip</div>
                        </div>
                    </a>
                </div>

                <blockquote class="blockquote text-center text-xl mt-4">
                    Open with <a class="text-blue-900" href="https://visualstudio.microsoft.com/vs/">Visual Studio 2022</a>
                </blockquote>
            </div>
        </div>
    </div>
</section>

@code {
    string ProjectZip => "TalentBlazor.zip";

    string ZipUrl(string repo) =>
         $"https://github.com/{repo}/archive/refs/heads/main.zip";
}
